<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authenticating.SignupActivity"
    android:gravity="right"
    android:id="@+id/authenticate_base_LIY_layout"
    android:background="#FFEF87"
    android:orientation="vertical">

    <TextView
        android:id="@+id/authenticate_base_TXT_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black"
        android:gravity="left"
        android:layout_marginTop="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:outlineAmbientShadowColor="@color/black"
        android:hint="Email"
        app:hintTextColor="@color/black"
        android:id="@+id/authenticate_base_EDT_email">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:gravity="left"
            android:background="@android:drawable/dialog_holo_light_frame" />

    </com.google.android.material.textfield.TextInputLayout >

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black"
        android:gravity="left"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:outlineAmbientShadowColor="@color/black"
        android:hint="Password"
        android:layout_marginTop="10dp"
        app:hintTextColor="@color/black"
        app:endIconMode="password_toggle"
        android:id="@+id/authenticate_base_EDT_password">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:gravity="left"
            android:background="@android:drawable/dialog_holo_light_frame" />

    </com.google.android.material.textfield.TextInputLayout >

    <com.google.android.material.button.MaterialButton
            android:id="@+id/authenticate_base_BTN_do_action"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Button"
            android:textColor="@color/black"
            android:textSize="22dp"
            app:cornerRadius="10dp"
        android:layout_marginTop="20dp" />

    <ProgressBar
        android:id="@+id/authenticate_base_PRB_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />


</LinearLayout>
